@model ContosoUniversity.Core.Data.Entities.Student

@{ ViewBag.Title = "Details"; }

<h2>Details</h2>

<div>
  <h4>Student</h4>

  <hr />

  <dl class="dl-horizontal">
    <dt>@Html.DisplayNameFor(model => model.LastName)</dt>
    <dd>@Html.DisplayFor(model => model.LastName)</dd>

    <dt>@Html.DisplayNameFor(model => model.FirstMidName)</dt>
    <dd>@Html.DisplayFor(model => model.FirstMidName)</dd>

    <dt>@Html.DisplayNameFor(model => model.EnrollmentDate)</dt>
    <dd>@Html.DisplayFor(model => model.EnrollmentDate)</dd>

    <dt>@Html.DisplayNameFor(x => x.Enrollments)</dt>
    <dd>
      <table class="table">
        <thead>
          <tr>
            <th>Course Title</th>
            <th>Grade</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model.Enrollments)
          {
            <tr>
              <td>@Html.DisplayFor(x => item.Course.Title)</td>
              <td>@Html.DisplayFor(x => item.Grade)</td>
            </tr>
          }
        </tbody>
      </table>
    </dd>
  </dl>
</div>

<p>
  @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
  @Html.ActionLink("Back to List", "Index")
</p>
